<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="30">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%-5p] %c{1} - %m %ex%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="sample.kafka.reader" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="warning">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>